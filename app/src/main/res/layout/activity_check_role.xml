<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.CheckRoleActivity">

    <ImageView
        android:id="@+id/image_owl"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="250dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/logoapp1" />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        app:lottie_rawRes="@raw/warning"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/tv_banned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:textSize="20sp"
        android:text="Tài khoản của bạn đã bị khóa !"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_wait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="400dp"
        android:text="Tài khoản của bạn đang được quản trị viên xem xét !"
        android:gravity="center"
        android:textSize="20sp"
        android:visibility="gone" />

</RelativeLayout>